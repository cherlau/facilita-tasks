header {
    width: calc(100vw - 106px);
    height: 83px;
    display: flex;
    flex-direction: row-reverse;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    position: fixed;
    left: 106px;
    background-color: #fff;
    z-index: 1;
}

.user-content {
    display: flex;
    align-items: center;
    padding-inline: 34px;
}

.img-content-header {
    width: 46px;
    margin-right: 12px;
}

.img-content-header img {
    width: 100%;
    border-radius: 50%;
}

.user-content p {
    font-weight: 700;
}

.user-content span {
    font-size: 13px;
    font-weight: 700;
    color: #2693FF;
}