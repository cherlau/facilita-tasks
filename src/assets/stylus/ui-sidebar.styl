// Sidebar

.sidebar-component {
    background-color: #2693ff;
    height: 100vh;
    width: 106px;
}

.img-content-sidebar {
    width: 75px;
    margin: 7px auto auto;
}

.img-content-sidebar img {
    width: 100%;
}

.sidebar-component-container {
    height: calc(100% - 180px);
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.sidebar-module-content 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

// Sidebar Modules

.sidebar-module-item h3 {
    color: #fff;
    font-size: 12px;
    margin-top: 8px;
}

.sidebar-module-item 
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 19px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.219);
    width: 100%;
    cursor: pointer;

.highlighted {
    background-color: #1182f2;
}

// Sidebar Module Categories

.categories-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #f4fbff;
    height: 100vh;
    width: 185px;
    box-shadow: 2px 0px 4px rgba(0, 0, 0, 0.1);
    padding-left: 42px;
}

.categories-content-title {
    margin-bottom: 62px;
    font-size: 17px;
}

// Sidebar Module Categories Item

.sidebar-categorie-item-content:nth-child(3) span {
    background-color: #ff2e79;
}

.sidebar-categorie-item-content:nth-child(4) span {
    background-color: #ffc42e;
}

.sidebar-categorie-item-content:nth-child(5) span {
    background-color: #abc5d4;
}

.sidebar-categorie-item-content .highlighted button {
    color: #2693ff ;
}

.categories-item-btn {
    background-color: #ffffff00;
    font-size: 14px;
    font-weight: 700;
    padding: 12px 0;
    color: #283848;
    display: flex;
    align-items: center;
}

.categorie-item-count {
    font-size: 11px;
    color: #fff;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    margin-left: 7px;
    align-items: center;
    justify-content: center;
}