// Sidebar

.sidebar-component {
    background-color: primary1;
    height: 100vh;
    width: 106px;
}

.img-content-sidebar {
    width: 75px;
    margin: 7px auto auto;
}

.img-content-sidebar img {
    width: 100%;
}

.sidebar-component-container {
    height: calc(100% - 180px);
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.sidebar-module-content 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

// Sidebar Modules

.sidebar-module-item h3 {
    color: white;
    font-size: 12px;
    margin-top: 8px;
}

.sidebar-module-item 
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 19px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.219);
    width: 100%;
    cursor: pointer;

.highlighted {
    background-color: primary2;
}

// Sidebar Module Categories

.categories-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: white2;
    height: 100vh;
    width: 185px;
    box-shadow: 0px 1px 10px rgba(40, 56, 72, 0.06);
    padding-left: 42px;
}

.categories-content-title {
    margin-bottom: 41px;
    font-size: 17px;
}

// Sidebar Module Categories Item

.sidebar-categorie-item-content button{
    font-size: 15px
}


.sidebar-categorie-item-content:nth-child(3) span {
    background-color: danger5;
}

.sidebar-categorie-item-content:nth-child(4) span {
    background-color: warning1;
}

.sidebar-categorie-item-content:nth-child(5) span {
    background-color: grey1;
}

.sidebar-categorie-item-content .highlighted button {
    color: primary1 ;
}


.categories-item-btn {
    background-color: #ffffff00;
    font-size: 14px;
    font-weight: 700;
    padding: 12px 0;
    color: grey5;
    display: flex;
    align-items: center;
}

.categorie-item-count {
    box-sizing: border-box
    font-size: 11px;
    color: white;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    margin-left: 7px;
    align-items: center;
    justify-content: center;
    padding-top: 1px
}