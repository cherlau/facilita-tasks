.form-login-container {
    width: 1020px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.form-login-content {
    display: flex;
    flex-direction: column;
    margin: 20px;
    width: 370px;
}


.form-login-content h2 {
    font-size: 18px;
    margin-bottom: 33px;
    font-weight: bold;
    color: grey5
}

.form-login-content div {
    display: flex;
    flex-direction: column;
    font-weight: 600;
    font-size: 15px;
}

.form-login-content label {
    color: grey2;
    margin-bottom: 5px;
}

.form-login-content button{
   width: 100%;
   margin-bottom 40px
}

a {
    font-size: 14px;
    font-weight: 600;
    color: primary1;
}

.message-error {
    background-color: danger1;
    border: 1px solid danger4;
    border-radius: 5px;
    padding: 16px;
    margin-bottom: 12px;
}

.message-error p {
    color: danger4;
}