.form-login-container {
    width: 1020px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.form-login-content {
    display: flex;
    flex-direction: column;
    margin: 20px;
    width: 370px;
}


.form-login-content h2 {
    font-size: 18px;
    margin-bottom: 33px;
    font-weight: bold;
    color: primary_strong
}

.form-login-content div {
    display: flex;
    flex-direction: column;
    font-weight: 600;
    font-size: 15px;
}

.form-login-content label {
    color: #5a7186;
    margin-bottom: 5px;
}

.form-login-content button{
   width: 100%;
}

a {
    font-size: 14px;
    font-weight: 600;
    color: #3198ff;
}

.message-error {
    background-color: #ecc8c5;
    border: 1px solid #b73f3b;
    border-radius: 5px;
    padding: 16px;
    margin-bottom: 12px;
}

.message-error p {
    color: #b73f3b;
}