.task-item-content {
    padding: 14px;
    background-color: white;
    border-radius: 5px;
    margin-bottom: 7px;
    box-shadow: 0px 1px 10px rgba(40, 56, 72, 0.06);
}

.task-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.task-checked-content {
    background-color: white3;
}

.task-item-tipo {
    background-color: grey7;
    font-weight: 600;
    color: white;
    padding: 5px 10px;
    border-radius: 15px;
    font-size: 14px;
    position: absolute;
    top: 4px;
    right: 25px;
}

.task-item-description {
    padding: 15px 15px 0 15px;
    font-size: 15px;
    font-weight: 600;
}

.urgente-background {
    background-color: danger2;
}

.importante-background {
    background-color: warning1;
}

.task-item-bottom-line {
    border-bottom: 1px solid grey8;

    padding-bottom: 14px;
}