.modal-remove {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    background-color: white;
    width: 476px;
    height: 345px;
    box-shadow: 0px 1px 10px rgba(40, 56, 72, 0.06);
    border-radius: 10px;
}

.modal-remove-trash-icon {
    width: 135px;
    height: 135px;
    background-color: #edf6fc;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 70px;
    margin: 20px 0 10px;
}

.modal-remove p {
    color: #475e78;
    font-weight: 600;
}

.modal-remove .modal-remove-title {
    font-size: 20px;
    font-weight: 700;
    margin: 5px;
    color: #283848;
}

.modal-remove-title strong{
    color: #ff4874;
}

.modal-remove-buttons{
    display: flex;
    gap: 11px;
    margin-top: 33px;
}