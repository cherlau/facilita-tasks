.ui-button
    cursor: pointer
    border: none
    font-weight: 600
    background-color: transparent
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 5px;

    &.xs
        height: m_xs
        font-size: 13px
        padding: 0 25px

    &.sm
        height: m_sm
        font-size: 14px
        padding: 0 13px;

    &.md
        height: m_md
        font-size: 15px
        padding: 0 27px;

    &.lg
        height: m_lg
        font-size: 16px
        padding: 0 24px;

    &.xxl
        height: m_xxl
        font-size: 16px
        padding 0 22px
        
    i 
        font-size: 10px;
        padding-right: 7px;

    svg
        padding: 23px
    
    .disabled
        background-color: #a6c1d2


.sidebar-categorie-item-content .highlighted{
    color: #2693ff ;
}

.highlighted i {
    color: #2693ff;
}

.btn-add-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 23px;
    right: 28px;
    border: none;
    color: #fff;
    font-size: 50px;
    width: 76px;
    height: 76px;
    border-radius: 50%;
    box-shadow: 4px 4px 4px rgba(0, 0, 0, 0.1);
}

