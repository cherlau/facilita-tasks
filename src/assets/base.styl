* {
  margin: 0;
  font-family: "Gilroy", sans-serif;
  color: #395068;
}

body {
  height: 100vh;
  background-color: #e9f4fb;
}

button {
  cursor: pointer;
  letter-spacing: 1px;
  border: none;
  font-weight: 600;
  background-color: transparent;
}

input,
textarea {
  border: 2px solid #bfdaeb;
  border-radius: 5px;
  font-size: 16px;
  font-weight: 600;
}

label {
  font-weight: 600;
}

input:focus,
input:focus-visible,
textarea:focus-visible {
  outline: 1px solid #3394f5;
  border: 2px solid #3394f5;
}

img {
  user-select: none;
}

.flex-column {
  display: flex;
  flex-direction: column;
  gap: 3px;
}
